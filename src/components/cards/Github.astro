---
import GithubIcon from '../icons/Github.astro'
import ArrowUpRight from '../icons/ArrowUpRight.astro'

interface Props {
  href?: string
  title?: string
  subtitle?: string
}

const {
  href = 'https://github.com/yuler',
  title = 'GitHub',
  subtitle = '@yuler',
} = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group relative overflow-hidden rounded-3xl bg-white p-6 shadow-sm transition-all duration-300 hover:scale-[1.02] hover:shadow-lg"
>
  {/* Background Icon Slot */}
  <div class="absolute -right-4 -top-4 opacity-5">
    <GithubIcon class="size-28" />
  </div>

  {/* Content */}
  <div class="relative z-10">
    <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
    <p class="text-sm text-gray-500">{subtitle}</p>
  </div>

  {/* Arrow for links */}
  <div
    class="absolute bottom-4 right-4 opacity-0 transition-opacity group-hover:opacity-100"
  >
    <ArrowUpRight class="size-5 text-gray-400" />
  </div>
</a>
