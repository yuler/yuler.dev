---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
import ChevronRight from '../../components/icons/ChevronRight.astro'
import BackToHome from '../../components/BackToHome.astro'
import { formatDate } from '../../utils/date'

import type { GetStaticPaths } from 'astro'

import type { Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

interface Props {
  page: Page<CollectionEntry<'posts'>>
}

const { page } = Astro.props

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = (
    await getCollection('posts', ({ data }) => {
      return import.meta.env.PROD ? data.draft !== true : true
    })
  ).sort((a, b) => (b.data.date > a.data.date ? 1 : -1))

  return paginate(posts, { pageSize: 10 })
}
---

<Layout title="Posts â€” Yu Le">
  <div class="h-full px-4 py-12 md:py-20">
    <div class="mx-auto max-w-3xl">
      <BackToHome />

      <div class="rounded-3xl bg-white p-8 shadow-sm">
        <div class="mb-6 flex items-center justify-between">
          <h1 class="text-xl font-semibold text-gray-900">Posts</h1>
          <span
            class="rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-600"
          >
            Page {page.currentPage} of {page.lastPage}
          </span>
        </div>

        <ul class="space-y-2">
          {
            page.data.map(post => (
              <li>
                <a
                  href={`/posts/${post.slug}`}
                  class="group flex items-center justify-between rounded-2xl p-4 transition-colors hover:bg-gray-50"
                >
                  <div>
                    <h3 class="font-medium text-gray-900 group-hover:text-blue-600">
                      {post.data.title}
                      {post.data.draft && (
                        <span class="ml-2 rounded-md bg-amber-100 px-2 py-0.5 text-xs font-medium text-amber-700">
                          Draft
                        </span>
                      )}
                    </h3>
                    <time
                      class="text-sm text-gray-500"
                      datetime={post.data.date.toISOString()}
                    >
                      {formatDate(post.data.date)}
                    </time>
                  </div>
                  <ChevronRight class="h-5 w-5 text-gray-400 transition-transform group-hover:translate-x-1 group-hover:text-blue-600" />
                </a>
              </li>
            ))
          }
        </ul>

        {
          (page.url.prev || page.url.next) && (
            <div class="mt-8 flex items-center justify-between border-t border-gray-100 pt-6">
              {page.url.prev ? (
                <a
                  href={page.url.prev}
                  class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-600 transition-colors hover:bg-gray-200 hover:text-gray-900"
                >
                  <ChevronRight class="h-4 w-4 rotate-180" />
                  Previous
                </a>
              ) : (
                <span />
              )}
              {page.url.next ? (
                <a
                  href={page.url.next}
                  class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-600 transition-colors hover:bg-gray-200 hover:text-gray-900"
                >
                  Next
                  <ChevronRight class="h-4 w-4" />
                </a>
              ) : (
                <span />
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</Layout>
